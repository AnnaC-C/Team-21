<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team21.cs.ncl.ac.uk.astervo.ShopActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:background="@drawable/greenback"
            android:id="@+id/top">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:id="@+id/imageView4"
                android:background="@drawable/catcrown2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp" />
            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:background="@drawable/quote"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/relativeLayout2">
            </RelativeLayout>
        </RelativeLayout>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/left1"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@drawable/button1"
            android:id="@+id/relativeLayout3"
            android:layout_below="@+id/textView22"
            android:layout_toEndOf="@+id/imageButton3"
            android:layout_marginRight="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/lai" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3"
            android:background="@drawable/buttonborder1"
            android:id="@+id/relativeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Happiness: +10"
                android:id="@+id/textView14"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textSize="15dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Required: 50"
                android:id="@+id/textView16"
                android:textSize="15dp"
                android:layout_below="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@drawable/button1"
            android:id="@+id/relativeLayout4"
            android:layout_below="@+id/textView22"
            android:layout_alignEnd="@+id/relativeLayout5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:background="@drawable/santahat"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonborder1"
            android:layout_marginRight="24dp"
            android:id="@+id/relativeLayout5"
            android:layout_below="@+id/relativeLayout3"
            android:layout_toEndOf="@+id/relativeLayout3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Happiness: +10"
                android:id="@+id/textView17"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textSize="15dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Required: 50"
                android:id="@+id/textView18"
                android:textSize="15dp"
                android:layout_below="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/right1"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_toEndOf="@+id/relativeLayout4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView22"
            android:layout_below="@+id/top"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shoplogo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imageView7"
            android:background="@drawable/rewardslogo"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>