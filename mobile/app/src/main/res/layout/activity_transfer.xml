<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team21.cs.ncl.ac.uk.astervo.TransferActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select account to transfer from:"
        android:id="@+id/transferFromTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transferFrom"
        android:layout_below="@+id/transferFromTitle"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an amount to transfer:"
        android:id="@+id/transferAmountTitle"
        android:layout_below="@+id/transferFrom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transferAmount"
        android:layout_below="@+id/transferAmountTitle"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:maxWidth="200dp"
        android:minWidth="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â£0"
        android:id="@+id/transferDisplayAmount"
        android:layout_alignBottom="@+id/transferAmount"
        android:layout_toStartOf="@+id/transferAmount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select account to transfer to:"
        android:id="@+id/transferToTitle"
        android:layout_below="@+id/transferAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transferTo"
        android:layout_below="@+id/transferToTitle"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:id="@+id/transferSubmit"
        android:layout_below="@+id/transferTo"
        android:layout_centerHorizontal="true"
        android:onClick="submit"/>
</RelativeLayout>