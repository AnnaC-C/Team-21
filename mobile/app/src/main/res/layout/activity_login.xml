<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team21.cs.ncl.ac.uk.astervo.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginEmail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:hint="Enter your email"
        android:minWidth="300dp"
        android:maxWidth="300dp"
        android:singleLine="true"
        android:text="json@test.com" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginPass"
        android:layout_below="@+id/loginEmail"
        android:layout_centerHorizontal="true"
        android:hint="Enter your password"
        android:minWidth="300dp"
        android:maxWidth="300dp"
        android:password="true"
        android:singleLine="true"
        android:text="password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/initiateLogin"
        android:layout_below="@+id/loginPass"
        android:layout_centerHorizontal="true"
        android:onClick="login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/initiateSignUp"
        android:layout_below="@+id/initiateLogin"
        android:layout_centerHorizontal="true"
        android:onClick="signUp"/>

</RelativeLayout>
