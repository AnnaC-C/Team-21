<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team21.cs.ncl.ac.uk.astervo.LoginActivity"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/emailRel"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginEmail"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:hint="Enter your email"
                android:minWidth="200dp"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="test@astervo.com"
                android:textColor="#99CCFF"
                android:textColorHint="#99CCFF" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/passRel"
        android:layout_below="@+id/emailRel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginPass"
                android:layout_centerHorizontal="true"
                android:hint="Enter your password"
                android:minWidth="200dp"
                android:maxWidth="200dp"
                android:password="true"
                android:singleLine="true"
                android:text="password"
                android:textColor="#99CCFF"
                android:textColorHint="#99CCFF"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passRel"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:id="@+id/logBut"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/initiateLogin"
                android:layout_centerHorizontal="true"
                android:onClick="login"
                android:background="@drawable/loginbg" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/logBut"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/initiateSignUp"
                android:onClick="signUp"
                android:background="@drawable/signupbg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:height="30dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
