<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team21.cs.ncl.ac.uk.astervo.DashActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/accListView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"></ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accounts."
        android:id="@+id/dashAccTitle"
        android:layout_above="@+id/accListView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:id="@+id/dashTransfer"
        android:layout_below="@+id/accListView"
        android:layout_alignStart="@+id/dashAccTitle"
        android:layout_marginTop="35dp"
        android:onClick="transfer"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button5"
        android:background="@drawable/hoem"
        android:onClick="buttonOnClick1" />

</RelativeLayout>